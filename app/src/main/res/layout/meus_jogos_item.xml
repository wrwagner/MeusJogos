<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivJogo"
            android:layout_width="96dp"
            android:layout_height="110dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/mega_man" />

        <TextView
            android:id="@+id/tv1Titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivJogo"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Mega Man" />

        <TextView
            android:id="@+id/tvAno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/tv1Titulo"
            app:layout_constraintStart_toStartOf="@+id/tv1Titulo"
            app:layout_constraintTop_toBottomOf="@+id/tv1Titulo"
            tools:text="2018" />

        <TextView
            android:id="@+id/tvDescricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/tvAno"
            app:layout_constraintStart_toStartOf="@+id/tvAno"
            app:layout_constraintTop_toBottomOf="@+id/tvAno"
            tools:text="Ele é puro aço" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>